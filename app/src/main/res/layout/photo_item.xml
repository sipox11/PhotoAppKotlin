<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="90dp">

    <ImageView android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/photo_item"
        android:scaleType="centerCrop"
        android:contentDescription="@string/photo_item_content_description" />
    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/main_view"
        >
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tags"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:layout_alignParentTop="false"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/likes"
            android:textColor="@android:color/white"
            android:id="@+id/like_label"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/likes"
            android:textColor="@android:color/white"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/like_label"
            android:layout_toEndOf="@+id/like_label"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/favorites"
            android:layout_toRightOf="@+id/likes"
            android:layout_toEndOf="@+id/likes"
            android:textColor="@android:color/white"
            android:id="@+id/favorite_label"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"
            />
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/favorites"
            android:layout_toRightOf="@+id/favorite_label"
            android:layout_toEndOf="@+id/favorite_label"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:textColor="@android:color/white"
            android:textSize="12sp"


            />

    </RelativeLayout>
</FrameLayout>